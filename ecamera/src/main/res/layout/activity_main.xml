<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb000000"
    >

  <LinearLayout
      android:id="@+id/title_layout"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:orientation="horizontal"
      android:paddingLeft="15sp"
      android:paddingRight="15sp"
      android:gravity="center_vertical"
      >

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_cancel"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/food_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:gravity="center"
        tools:text="烧鸭叉烧反烧鸭叉烧反烧鸭叉烧反烧鸭叉烧反烧鸭叉烧反"
        />

    <ImageView
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_guide"
        />

  </LinearLayout>

  <me.ele.ecamera.lib.ui.SquareLayout
      android:id="@+id/fill_space_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/title_layout"
      android:background="#000000"
      />

  <me.ele.ecamera.lib.ui.CameraView
      android:id="@+id/camera_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/title_layout"
      android:background="#000000"
      />

  <me.ele.ecamera.lib.ui.CameraControllerView
      android:id="@+id/camera_controller_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_below="@+id/fill_space_view"
      />


</RelativeLayout>