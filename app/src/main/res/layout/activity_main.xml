<org.peace.allinone.ui.ActivityEntranceLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/left"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="450"
      android:src="@drawable/left"
      style="@style/Scale"
      />

  <View
      android:layout_width="1px"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      />

  <LinearLayout
      android:id="@+id/right"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="677"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/right_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/right_top"
        style="@style/Scale"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/right_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/right_left"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/right_left"
          style="@style/Scale"
          />

      <View
          android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="@android:color/white"
          />

      <ImageView
          android:id="@+id/right_right"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/right_right"
          style="@style/Scale"
          />

    </LinearLayout>
  </LinearLayout>
</org.peace.allinone.ui.ActivityEntranceLayout>